    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.7",
    "@types/mustache": "^4.2.5",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.9",
    "@types/passport-facebook": "^3.0.0",
    "@types/passport-google-oauth": "^1.0.42",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/speakeasy": "^2.0.7",
