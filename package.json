    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
